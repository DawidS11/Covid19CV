<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <TableLayout

        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:padding="5dp"
            android:background="#A0A0A0">

            <TextView
                android:id="@+id/TextView1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Cases PCR: "></TextView>

            <TextView
                android:id="@+id/casesPCRView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Text"
                android:textStyle="bold"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:padding="5dp">

            <TextView
                android:id="@+id/TextView2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Incidence PCR: "></TextView>

            <TextView
                android:id="@+id/incidencePCRView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Text"
                android:textStyle="bold"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:padding="5dp"
            android:background="#A0A0A0">

            <TextView
                android:id="@+id/TextView3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Cases PCR last 14 days: "></TextView>

            <TextView
                android:id="@+id/casesPCR14View"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Text"
                android:textStyle="bold"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:padding="5dp">

            <TextView
                android:id="@+id/TextView4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Incidence PCR last 14 days: "></TextView>
            <TextView
                android:id="@+id/incidencePCR14View"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Text"
                android:textStyle="bold"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:padding="5dp"
            android:background="#A0A0A0">

            <TextView
                android:id="@+id/TextView5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Deaths: "></TextView>

            <TextView
                android:id="@+id/deathsView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Text"
                android:textStyle="bold"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:padding="5dp">

            <TextView
                android:id="@+id/TextView6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Deaths rate: "></TextView>

            <TextView
                android:id="@+id/deathRateView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Text"
                android:textStyle="bold"></TextView>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/reportsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="Reports"
        android:layout_gravity="center"
        android:background="#E5FEE3"/>

</LinearLayout>