<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tableLayout0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:stretchColumns="*">

                <TableRow
                    android:id="@+id/tableRow01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Diagnostic code view: "></TextView>

                    <TextView
                        android:id="@+id/diagnosticCodeView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Text"
                        android:textStyle="bold"></TextView>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Symptom start date: "></TextView>

                    <TextView
                        android:id="@+id/symptomStartDate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Text"
                        android:textStyle="bold"></TextView>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/textSymptoms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Symptoms:"></TextView>

            <CheckBox
                android:id="@+id/symptom0Check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fever or chills"></CheckBox>
            <CheckBox
                android:id="@+id/symptom1Check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cough"></CheckBox>
            <CheckBox
                android:id="@+id/symptom2Check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shortness	of	breath	or	difficulty	breathing"></CheckBox>
            <CheckBox
                android:id="@+id/symptom3Check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fatigue"></CheckBox>
            <CheckBox
                android:id="@+id/symptom4Check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Muscle or body aches"></CheckBox>
            <CheckBox
                android:id="@+id/symptom5Check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Headache"></CheckBox>
            <CheckBox
                android:id="@+id/symptom6Check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New loss of taste or smell"></CheckBox>
            <CheckBox
                android:id="@+id/symptom7Check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sore throat"></CheckBox>
            <CheckBox
                android:id="@+id/symptom8Check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congestion or runny nose"></CheckBox>
            <CheckBox
                android:id="@+id/symptom9Check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nausea or vomiting"></CheckBox>
            <CheckBox
                android:id="@+id/symptom10Check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diarrhea"></CheckBox>

            <TextView
                android:id="@+id/textCloseContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close contact:"></TextView>
            <Spinner
                android:id="@+id/closeContactSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></Spinner>
            <TableLayout
                android:id="@+id/tableLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:stretchColumns="*">
                <TableRow
                    android:id="@+id/tableRow11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Municipality name: "></TextView>

                    <TextView
                        android:id="@+id/municipalityNameView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Text"
                        android:textStyle="bold"></TextView>
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btnCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:layout_marginLeft="200dp"></Button>

        </LinearLayout>

    </ScrollView>

</LinearLayout>